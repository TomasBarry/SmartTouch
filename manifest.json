{
  "manifest_version": 2,

  "name": "literate-train",
  "description": "This extension will refresh the page when a user swipes",
  "version": "1.0",

  "browser_action": {
   "default_icon": "Icon2.png",
   "default_popup": "popup.html"
  },
  "web_accessible_resources": ["loadingGif.gif"],
  "permissions": [
   "activeTab",
   "tabs"
   ],
   "background": {
    "scripts": ["/js/background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
              "/js/external/jquery.js",
              "/js/content_script.js"
              ]
      }
    ]
}